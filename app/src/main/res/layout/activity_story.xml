<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f29ad8"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Story Board"
        android:layout_marginTop="5dp"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#f039b1"
        android:fontFamily="@font/lobster"
        android:textStyle="bold"
        android:textSize="45sp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="find"
            android:backgroundTint="#f039b1"
            android:fontFamily="@font/lobster"
            android:textStyle="bold"
            android:text="Find"
            android:textSize="20dp"
            android:translationX="60dp" />

        <EditText
            android:id="@+id/search_tags"
            android:padding="10dp"
            android:layout_width="200dp"
            android:textColor="#f039b1"
            android:fontFamily="@font/lobster"
            android:textStyle="bold"
            android:layout_height="match_parent"
            android:background="@drawable/draw_border"
            android:translationX="90dp" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/simpleCheckBox"
        android:layout_width="wrap_content"
        android:buttonTint="#f039b1"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#f039b1"
        android:fontFamily="@font/lobster"
        android:textStyle="bold"
        android:scaleX="1.3"
        android:scaleY="1.3"
        android:text="Include Sketches" />
    <ListView
        android:id="@+id/checkPhotoList"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/selectedTags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You Selected:"
        android:textColor="#f039b1"
        android:fontFamily="@font/lobster"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="350dp"
        android:layout_height="270dp"
        android:id="@+id/result"
        android:textColor="#f039b1"
        android:fontFamily="@font/lobster"
        android:textStyle="bold"
        android:textSize="15dp"
        android:padding="5dp"
        android:background="@drawable/draw_border"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="generateStory"
            android:text="Story"
            android:backgroundTint="#f039b1"
            android:fontFamily="@font/lobster"
            android:textStyle="bold"
            android:textSize="20dp"
            android:translationX="60dp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="goBack"
            android:text="Back"
            android:backgroundTint="#f039b1"
            android:fontFamily="@font/lobster"
            android:textStyle="bold"
            android:textSize="20dp"
            android:translationX="150dp" />
    </LinearLayout>

</LinearLayout>